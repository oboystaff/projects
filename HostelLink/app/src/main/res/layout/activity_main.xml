<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#66ccff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Welcome to Connect Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0020C2"
        android:textSize="25sp"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp">
        <!--  -->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/kpoly"
            android:contentDescription="@string/app_name"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Detail Information"
            android:id="@+id/button"
            android:background="@drawable/buttonrounded"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get General Information"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:background="@drawable/buttonrounded"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Vacant Space"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:background="@drawable/buttonrounded"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find hostel and Institution"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:background="@drawable/buttonrounded"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
